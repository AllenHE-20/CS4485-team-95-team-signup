<!DOCTYPE html>
<html lang="en">
<%- include("partials/doc-head.ejs", {title: "User Information"}); %>
<body>
<%- include('partials/header.ejs'); %>
  
<!--TODO: get name from database/SSO --> 
<% const name = 'Placeholder Name' %>

<main class="user-page">
    <h1><%= name %></h1>
    <div class="user-info">
        <div class="user-row">
            <div class="user-col">
                <a href="#" class="resume-link">
                    <img src="/images/resume.svg"
                    width="50" height="auto">
                </a>
                <p>Resume</p>
            </div>

            <div class="user-col">
                <a href="#" class="invite-link">
                    <img src="/images/invite.svg"
                    width="50" height="auto">
                </a>
                <p>Invite</p>
            </div>
        </div>

        <div class="projects">
            <h3>Project Preferences</h3>
            <ul>
            <% interests.forEach(project => { %>
                <li><%= project %></li>
            <% }) %>
            </ul>
        </div>

        <div class="add-info">
            <h3>Contact Information</h3>
            <p>Email: <%= email %> | Phone: <%= phone %> | Discord: <%= discord %></p>
        </div>
    </div>
</main>
    
</script>
</body>
</html>